{
  "name": "Quizlet Speak",
  "description": "Uses Web Browser Speech Synthesis to speak the quiz word accented with the correct language",
  "version": "0.1",
  "permissions": ["*://quizlet.com/*","tabs", "webNavigation","storage"],
  "browser_action": {
    "default_popup": "quizlet-speak-language-chooser-popup.html"
  },
  "background": {
    "scripts": ["quizlet-speak.js", "quizlet-speak-language-chooser-popup.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://quizlet.com/*"],
      "js": ["quizlet-speak-content-script.js"]
    }
  ],
  "manifest_version": 2
}